{
  "name": "pnpm-monorepo-v2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky",
    "common": "pnpm --filter common",
    "app": "pnpm --filter web-app",
    "dev": "pnpm --filter web-app dev",
    "build": "pnpm --filter web-app build",
    "start": "pnpm --filter web-app start",
    "docker:dev": "docker compose --profile development up",
    "docker:dev:build": "docker compose --profile development up --build",
    "docker:dev:down": "docker compose --profile development down",
    "docker:prod": "docker compose --profile production up",
    "docker:prod:build": "docker compose --profile production up --build -d",
    "docker:prod:down": "docker compose --profile production down",
    "docker:stop": "docker compose down",
    "docker:clean": "docker compose down -v --remove-orphans",
    "docker:logs": "docker compose logs -f",
    "docker:logs:app": "docker compose logs -f web-app",
    "docker:logs:db": "docker compose logs -f db",
    "db:start": "docker compose up db -d",
    "db:stop": "docker compose stop db",
    "db:reset": "docker compose down -v && docker compose up db -d",
    "db:shell": "docker compose exec db psql -U postgres -d agendog",
    "pgadmin": "docker compose --profile development up pgadmin -d"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.17.1"
  },
  "packageManager": "pnpm@10.23.0",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.14.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.12.2"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  }
}
